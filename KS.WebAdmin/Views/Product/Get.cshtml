@using KS.ViewModels.Category
@model KS.ViewModels.Product.ProductIndexViewModel
@inject KS.Interfaces.DataAccess.Repositories.IBrandRepository _brandRepository
@inject KS.Interfaces.DataAccess.Repositories.ICategoryRepository _categoryRepository
@inject KS.Interfaces.DataAccess.Repositories.ITaxClassRepository _taxClassRepository

@{
    ViewBag.Title = $"Продукт: {@Model.Name}";
    Layout = "_Layout";
}


<div class="container">
    <div class="row">
        <div class="col-7">

            <div class="tab">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="#tab-1" data-bs-toggle="tab" role="tab" aria-selected="true">Основная информация</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#tab-2" data-bs-toggle="tab" role="tab" aria-selected="false">Цены</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#tab-3" data-bs-toggle="tab" role="tab" aria-selected="false">Категории</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab-1" role="tabpanel">

                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-form-label col-sm-2 text-sm-end">Название</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" rows="3" disabled/>
                            </div>
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Slug" class="col-form-label col-sm-2 text-sm-end">Slug</label>
                            <div class="col-sm-10">
                                <input asp-for="Slug" class="form-control" rows="3" disabled/>
                            </div>
                            <span asp-validation-for="Slug"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="ShortDescription" class="col-form-label col-sm-2 text-sm-end">Краткое описание</label>
                            <div class="col-sm-10">
                                <textarea asp-for="ShortDescription" class="form-control" rows="3" disabled></textarea>
                            </div>
                            <span asp-validation-for="ShortDescription"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Description" class="col-form-label col-sm-2 text-sm-end">Oписание</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control" rows="3" disabled></textarea>
                            </div>
                            <span asp-validation-for="Description"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Specification" class="col-form-label col-sm-2 text-sm-end">Техническое описание</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Specification" class="form-control" rows="3" disabled></textarea>
                            </div>
                            <span asp-validation-for="Specification"></span>
                        </div>
                        <div class="mb-3-row">
                            <div class="col-sm-10">
                                <label class="form-check m-0">
                                    <input asp-for="IsFeatured" type="checkbox" class="form-check-input" disabled>
                                    <span class="form-check-label">Рекомендовать</span>
                                </label>
                            </div>
                            <span asp-validation-for="IsFeatured"></span>
                        </div>
                        <div class="mb-3-row">
                            <div class="col-sm-10">
                                <label class="form-check m-0">
                                    <input asp-for="IsAllowToOrder" type="checkbox" class="form-check-input" disabled>
                                    <span class="form-check-label">Можно заказать</span>
                                </label>
                            </div>
                            <span asp-validation-for="IsAllowToOrder"></span>
                        </div>
                        <div class="mb-3-row">
                            <div class="col-sm-10">
                                <label class="form-check m-0">
                                    <input asp-for="IsCallForPricing" type="checkbox" class="form-check-input" disabled>
                                    <span class="form-check-label">Требуется ценообразование</span>
                                </label>
                            </div>
                            <span asp-validation-for="IsCallForPricing"></span>
                        </div>
                        <div class="mb-3-row">
                            <div class="col-sm-10">
                                <label class="form-check m-0">
                                    <input asp-for="StockTrackingIsEnabled" type="checkbox" class="form-check-input" disabled>
                                    <span class="form-check-label">Включено отслеживание запасов</span>
                                </label>
                            </div>
                            <span asp-validation-for="StockTrackingIsEnabled"></span>
                        </div>
                        <hr>
                        <div class="mb-3-row">
                            <img src="@Model.CoverImageUrl" class="rounded me-2 mb-2" alt="Placeholder" width="140" height="140">
                        </div>

                    </div>
                    <div class="tab-pane" id="tab-2" role="tabpanel">
                        <div class="mb-3-row">
                            <label asp-for="Price" class="form-label">Цена</label>
                            <span class="input-group-text">₽</span>
                            <input asp-for="Price" type="text" class="form-control" disabled>
                            <span class="input-group-text">.00</span>
                            <span asp-validation-for="Price"></span>
                        </div>
                        <div class="mb-3-row">
                            <label asp-for="OldPrice" class="form-label w-50">Старая цена</label>
                            <span class="input-group-text">₽</span>
                            <input asp-for="OldPrice" type="text" class="form-control" disabled>
                            <span class="input-group-text">.00</span>
                            <span asp-validation-for="OldPrice"></span>
                        </div>
                        <div class="mb-3-row">
                            <label asp-for="SpecialPrice" class="form-label">Специальная цена</label>
                            <span class="input-group-text">₽</span>
                            <input asp-for="SpecialPrice" type="text" class="form-control" disabled>
                            <span class="input-group-text">.00</span>
                            <span asp-validation-for="SpecialPrice"></span>
                        </div>
                        <div class="mb-3-row">
                            <label asp-for="SpecialPriceStart" class="form-label">Начало специальной цены</label>
                            <input asp-for="SpecialPriceStart" type="date" id="start" name="trip-start" class="form-control flatpickr-minimum flatpickr-input" placeholder="Выберите дату"
                                   value=""
                                   min="2021-01-01" max="2045-12-31" disabled>
                            <span asp-validation-for="SpecialPriceStart"></span>
                        </div>
                        <div class="mb-3-row">
                            <label asp-for="SpecialPriceEnd" class="form-label">Начало специальной цены</label>
                            <input asp-for="SpecialPriceEnd" type="date" id="start" name="trip-start" class="form-control flatpickr-minimum flatpickr-input" placeholder="Выберите дату"
                                   value=""
                                   min="2021-01-01" max="2045-12-31" disabled>
                            <span asp-validation-for="SpecialPriceEnd"></span>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-3" role="tabpanel">
                        <div class="form-group">
                            <select asp-for="BrandId" class="form-select flex-grow-1" asp-items="(await _brandRepository.GetBrand()).Select(x => new SelectListItem() {Text = x.Name, Value = x.Id.ToString()})">
                                <option value="" disabled>Выберите бренд</option>
                            </select>
                            <span asp-validation-for="BrandId"></span>
                        </div>
                        <div class="mb-3-row">
                            <select asp-for="TaxClassId" class="form-select flex-grow-1" asp-items="(await _taxClassRepository.GetTaxClass()).Select(x => new SelectListItem() {Text = x.Name, Value = x.Id.ToString()})">
                                <option value="" disabled>Выберите налоговый класс</option>
                            </select>
                            <span asp-validation-for="TaxClassId"></span>
                        </div>
                        <hr>
                        <div class="mb-3-row">
                            <select asp-for="CategoryIds" class="form-select flex-grow-1" asp-items="(await _categoryRepository.GetCategory()).Select(x => new SelectListItem() {Text = x.Name, Value = x.Id.ToString()})" disabled>
                                <option value="" disabled>Выберите категорию</option>
                            </select>
                            <span asp-validation-for="CategoryIds"></span>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-controller="Product" asp-action="Index">Вернуться </a>
        </div>
    </div>
</div>