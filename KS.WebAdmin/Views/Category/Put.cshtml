@model KS.ViewModels.Category.CategoryIndexViewModel

@{
    ViewBag.Title = $"Редактирование категории {@Model.Name}";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-7">
            <form asp-action="Put" asp-controller="Category" asp-route-id="@Model.Id" method="post">
                <input hidden asp-for="Id">
                <div class="mb-3 row">
                    <label asp-for="Name" class="col-form-label col-sm-2 text-sm-end">Название</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" placeholder="Название" rows="3"/>
                    </div>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Slug" class="col-form-label col-sm-2 text-sm-end">Описание</label>
                    <div class="col-sm-10">
                        <input asp-for="Slug" class="form-control" placeholder="" rows="3"/>
                    </div>
                    <span asp-validation-for="Slug"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-sm-10 ms-sm-auto">
                    <button type="submit" class="btn btn-primary float-end mt-n1">Изменить</button>
                    <button class="btn btn-primary float-end mt-n1">
                        <a asp-controller="Category" asp-action="Index" asp-route-id="@Model.Id">Вернуться </a>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-lg-5">
            
        </div>
    </div>
</div>
