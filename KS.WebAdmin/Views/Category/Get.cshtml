@model KS.ViewModels.Category.CategoryIndexViewModel

@{
    ViewBag.Title = $"Категория: {Model.Name}";
    Layout = "_Layout";
}


<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="mb-3 row">
                <label asp-for="Name" class="col-form-label col-sm-2 text-sm-end">Название</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Название" rows="3" disabled/>
                </div>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Slug" class="col-form-label col-sm-2 text-sm-end">Описание</label>
                <div class="col-sm-10">
                    <input asp-for="Slug" class="form-control" placeholder="" rows="3" disabled/>
                </div>
                <span asp-validation-for="Slug"></span>
            </div>

            <a asp-controller="Category" asp-action="Index">Вернуться </a>
        </div>
    </div>
</div>
