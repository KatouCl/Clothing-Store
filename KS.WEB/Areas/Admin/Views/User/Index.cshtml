@model System.Linq.IQueryable<KS.Entities.ApplicationUser>

@{
    ViewBag.Title = "Пользователи";
    Layout = "_AdminLayout";
}

@if (TempData["SM"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <div class="alert-icon">
            <i class="far fa-fw fa-bell"></i>
        </div>
        <div class="alert-message">
            @TempData["SM"]
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Пользователи</h5>
    </div>
    @if (!Model.Any())
    {
        <div class="text-center">
            <h5>Данных нет</h5>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th>Заказы</th>
                <th>Почта</th>
                <th>Подтвержден</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Телефон</th>
                <th>Действие</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <a>#</a>
                    </td>
                    <td>@user.Email</td>
                    <td>@user.EmailConfirmed.ToString()</td>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.PhoneNumber</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
